private function displayQuestion(Qcm $qcm): string
{
    // Récupère toutes les questions du QCM
    $qcmsQuestions = $qcm->getQuestions();

    ob_start(); // Démarre la mise en tampon de sortie pour capturer le contenu HTML

    ?>
    <section>
        <h1>Test</h1>

        <?php foreach ($qcmsQuestions as $qcmQuestion): ?>
            <h2><?= htmlspecialchars($qcmQuestion->getNameQuestion()) ?></h2>

            <?php 
            // Vérifie si la question a des réponses associées
            $answers = $qcmQuestion->getAnswers();
            if (!empty($answers)) {
                foreach ($answers as $answer):
                    ?>
                    <p><?= htmlspecialchars($answer->getNameAnswer()) ?></p>
                    <?php
                endforeach;
            } else {
                echo "<p>Aucune réponse disponible.</p>";
            }
            ?>

        <?php endforeach; ?>

    </section>
    <?php

    return ob_get_clean(); // Retourne le contenu HTML généré
}
